---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import TimeZone from "../components/TimeZoneCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import Globe from "../components/Globe";
import QuoteCard from "../components/QuoteCard.astro";
import { formatDate } from "../lib/helpers";
import { LINKEDIN_POSTS, LINKS } from "../lib/constants";

const posts = LINKEDIN_POSTS.sort(
  (postA, postB) => postB.date.getTime() - postA.date.getTime()
);
---

<script>
  import { stagger, animate, type AnimationSequence } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        type: "spring",
        at: "-0.1",
        delay: stagger(0.3),
      },
    ],
  ];

  animate(sequence as AnimationSequence);
</script>

<Layout
  description="Product Security Intern at Vontier | Cybersecurity enthusiast passionate about ethical hacking, AI-driven security automation, and building secure systems. Expert in penetration testing, vulnerability assessment, and security tooling."
  title="Ashmith Maddala - Product Security Intern | Cybersecurity Professional"
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-7xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-4 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-5 lg:max-h-[900px]"
  >
    <IntroCard />
    <AboutMe />
    <ContactsCard />
    <TimeZone />
    <Now />
    <Card
      colorText="text-neutral-900"
      colSpan="md:col-span-1"
      href="travel"
      rowSpan="md:row-span-1"
      title="Countries I visited"
    >
      <div class="h-full w-full absolute inset-0 -z-10">
        <Globe client:load />
      </div>
    </Card>
    <Card
      colSpan="md:col-span-1"
      rowSpan="md:row-span-2 flex gap-1"
      title="LinkedIn Posts"
    >
      <div class="flex flex-col gap-1">
        {
          posts?.slice(0, 3).map((post) => (
            <a
              class="text-xs decoration-none flex justify-between text-neutral-100 hover:text-neutral-400 ease-in-out transition-colors border-b-neutral-400 border-dashed border-b-1 my-0 py-1"
              href={post.url}
              target="_blank"
              rel="noopener noreferrer"
            >
              <p class="inline-block truncate pr-2 flex-1 min-w-0">
                {post.title}
              </p>
              <time
                class="text-right tabular-nums text-xs flex-shrink-0 ml-2"
                data-date={post.date.toISOString()}
                datetime={post.date.toISOString()}
              >
                {formatDate(post.date)}
              </time>
            </a>
          ))
        }
        <a
          href={LINKS.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-xs text-neutral-400 hover:text-neutral-200 mt-2"
          onclick="event.stopPropagation()"
        >
          View all posts â†’
        </a>
      </div>
    </Card>
    <QuoteCard />
  </main>
</Layout>
